   <!-- _________________________________________SECTION for Cards___________________________________________-->
    <section>
        <div class="container mt-5">
            <div class="row">
                {{#each products}}<!--to get the data from index.js -->
                    <div class="col-md-3p-3"> <!-- 12 / 3 = 4 cards -->
                        <div class="card" style="width: 15rem; height:23rem ;">
                            <img class="card-img-top" src="/product_images/{{this._id}}.jpg" alt="Card image cap" style="height:13rem ;">
                            <div class="card-body">
                                <h5 class="card-title">{{this.Name}}</h5>
                                <p class="card-text">{{this.Description}}</p>
                                
                                <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to cart</button>
                            </div>
                        </div>
                    </div>
                {{/each}}
            
        </div>
        </div>
    </section>

    